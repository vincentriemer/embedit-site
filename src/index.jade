mixin page-section(id)
  section(id="#{id}")
    div(class="showcase #{id}")
    .text-wrapper
      block

doctype html
html(lang=eng)
  head
    title='Embedit Electronics'
    link(href='assets/css/main.min.css', rel='stylesheet')
